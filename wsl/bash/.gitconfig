[user]
    name = Gregory Morrison
    email = greg.morrison@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = always
    pager = true
[core]
    autocrlf = input
    editor = vim
    eol = lf
    excludesfile =
    longpaths = true
    pager = delta
[delta]
    navigate = true
[diff]
    colorMoved = default
[interactive]
    diffFilter = delta --color-only
[merge]
    conflictstyle = diff3
    tool = vim
[mergetool]
    keeptemporaries = false
    keepbackups = false
    prompt = false
    trustexitcode = false
[push]
	  default = simple

